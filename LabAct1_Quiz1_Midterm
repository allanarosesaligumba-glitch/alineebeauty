<!-- JavaScript Statement Assignment -->
<script>
// 1. Variables
let brandName = "Alinee Beauty";
let shades = ["Rose Whisper", "Fierce Flame", "Sweet Desire"];
let visitorCount = 0;

// 2. Operators
let totalShades = shades.length;
let message = "We currently have " + totalShades + " beautiful shades available.";
console.log(message);

// 3. Conditional Statement
if (totalShades > 0) {
  console.log("Shades are available!");
} else {
  console.log("No shades available.");
}

// 4. JS Loops
for (let i = 0; i < shades.length; i++) {
  console.log("Shade " + (i+1) + ": " + shades[i]);
}

// 5. Strings
let motto = "Every mood. Every moment. Every you.";
console.log(motto.toUpperCase()); 

// 6. Functions
function welcomeUser(name) {
  return "Welcome to " + brandName + ", " + name + "!";
}
console.log(welcomeUser("Guest"));

// 7. Objects
let customer = {
  firstName: "Sample",
  lastName: "User",
  email: "sample@email.com",
  fullName: function() {
    return this.firstName + " " + this.lastName;
  }
};
console.log("Customer name: " + customer.fullName());

// Bonus: Form interactivity
document.querySelector(".contact-form").addEventListener("submit", function(event) {
  event.preventDefault();
  visitorCount++;
  alert("Thank you for contacting us! You are visitor #" + visitorCount);
});
</script>
